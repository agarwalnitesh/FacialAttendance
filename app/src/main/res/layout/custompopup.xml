<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2f333f"
    android:orientation="vertical"
    android:layout_marginVertical="130dp"
    android:layout_marginHorizontal="20dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="end"
            android:gravity="center"
            android:text="X"
            android:layout_marginRight="7dp"
            android:layout_marginTop="7dp"
            android:layout_alignParentRight="true"
            android:textColor="@android:color/white"
            android:background="@drawable/close_circle"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="start"
            android:gravity="center"
            android:text="Designed By:-  CSE 2014-18"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            android:layout_alignParentLeft="true"
            android:textColor="@android:color/white"
            />
    </RelativeLayout>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
      android:src="@drawable/aan"  />
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
   android:layout_marginTop="20dp"

    android:layout_height="wrap_content">
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="ASHISH"
        android:textStyle="bold"
        android:gravity="center"
        android:shadowColor="#FF131310"
        android:layout_marginHorizontal="5dp"
        android:paddingVertical="5dp"
        android:background="@drawable/nametext"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="NITESH"
        android:textStyle="bold"
        android:background="@drawable/nametext"
        android:gravity="center"

        android:layout_marginHorizontal="2dp"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:paddingVertical="5dp"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="ANKIT"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:paddingVertical="5dp"
        android:layout_marginHorizontal="2dp"
        android:textStyle="bold"
        android:gravity="center"
        android:shadowColor="#FF131310"
        android:background="@drawable/nametext"
        />
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_weight="1"
   android:layout_marginVertical="10dp"
    android:layout_height="0dp">
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="RAVI"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:paddingVertical="5dp"
        android:textStyle="bold"
        android:layout_marginHorizontal="25dp"
        android:gravity="center"
        android:background="@drawable/nametext"
        />
    <TextView
    android:layout_width="0dp"
    android:layout_weight="1"
        android:layout_marginHorizontal="25dp"
        android:layout_height="wrap_content"
        android:paddingVertical="5dp"
    android:text="BABAR"
    android:textColor="@android:color/white"
    android:textSize="20sp"
    android:textStyle="bold"
    android:gravity="center"
    android:background="@drawable/nametext"
    />
</LinearLayout>
</LinearLayout>